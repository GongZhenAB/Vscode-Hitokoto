{
  "name": "vscode-hitokoto",
  "displayName": "VSCode Hitokoto",
  "publisher": "GongZhenAB",
  "description": "在状态栏显示随机一言",
  "icon": "logo.png",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.29.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "hitokoto",
    "一言",
    "status bar",
    "状态栏"
  ],
  "bugs": {
    "url": "https://github.com/GongZhenAB/VSCode-Hitokoto/issues",
    "email": "mail@gongz.moe"
  },
  "homepage": "https://github.com/GongZhenAB/VSCode-Hitokoto",
  "repository": {
    "type": "git",
    "url": "https://github.com/GongZhenAB/VSCode-Hitokoto"
  },
  "activationEvents": [
    "*"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.hitokoto",
        "title": "hitokoto"
      },
      {
        "command": "extension.insertHitokoto",
        "title": "Hitokoto: 插入一言"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Hitokoto",
      "properties": {
        "hitokoto.api": {
          "type": "string",
          "default": "https://v1.hitokoto.cn",
          "description": "API 接口地址"
        },
        "hitokoto.types": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "a",
              "b",
              "c",
              "d",
              "e",
              "f",
              "g",
              "h",
              "i",
              "j",
              "k",
              "l"
            ],
            "enumDescriptions": [
              "动画",
              "漫画",
              "游戏",
              "文学",
              "原创",
              "来自网络",
              "其他",
              "影视",
              "诗词",
              "网易云",
              "哲学",
              "抖机灵"
            ]
          },
          "default": [],
          "description": "句子类型"
        },
        "hitokoto.refreshInterval": {
          "type": "string",
          "enum": [
            "off",
            "5",
            "10",
            "15",
            "30",
            "60"
          ],
          "enumDescriptions": [
            "不刷新",
            "5 分钟",
            "10 分钟",
            "15 分钟",
            "30 分钟",
            "60 分钟"
          ],
          "default": "10",
          "description": "刷新频率"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "extension.insertHitokoto",
          "group": "hitokoto_group",
          "when": "editorTextFocus"
        }
      ]
    }
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^10.12.21",
    "@vscode/vsce": "^3.6.0",
    "eslint": "^5.13.0",
    "typescript": "^3.3.1",
    "vscode": "^1.1.28"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "open": "^6.3.0"
  }
}